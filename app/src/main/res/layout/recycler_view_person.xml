<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/fragment_person_linear_layout_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/fragment_person_linear_layout_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="5">

            <TextView
                android:id="@+id/person_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/app_name"
                android:textSize="@dimen/fragment_person_name_size" />

            <TextView
                android:id="@+id/person_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_delete_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/ic_cancel_black_24dp"
            android:contentDescription="TODO" />
    </LinearLayout>

</androidx.cardview.widget.CardView>